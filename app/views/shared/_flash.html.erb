<% if flash[:notice] %>
  <div class="alert alert-info mt-4" role="alert">
    <%= flash[:notice] %>
    <% flash[:notice] = nil %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger mt-4" role="alert">
    <%= flash[:alert] %>
    <% flash[:alert] = nil %>
  </div>
<% end %>